<div class="flex flex-col flex-1 justify-center items-center p-4">
  
  <section class="formContainer">
    
    <div class="mb-5">
      <h2 class="formHeader">Sign in</h2>
    </div>
  
    <form id="login-form" class="flex flex-col">
  
      <!-- Email -->
      <label class="lblInput" for="email">Email</label>
      <input class="textInput" type="email" id="email" name="email" autocomplete="on" required>
  
      <!-- Password -->
      <label class="lblInput " for="password">Password</label>
      <input class="textInput" type="password" id="password" name="password" autocomplete="on" required>
  
      <!-- Message -->
      <div id="message" class="mt-1 text-sm self-center"></div>
  
      <!-- Button -->
      <button class="transition-colors duration-150 disabled:bg-stone-400 dark:disabled:bg-stone-600 bg-blue-500 hover:bg-blue-600 active:bg-blue-600 text-stone-50 hover:text-white active:text-white dark:bg-blue-600 dark:hover:bg-blue-700 dark:active:bg-blue-700 dark:text-stone-100 hover:dark:text-white dark:active:text-white rounded-lg cursor-pointer mt-4 py-1.5" type="submit">Sign in</button>
    </form>
  
    <!-- Create new account -->
    <div class="w-fit mt-4 text-stone-700 dark:text-stone-300 self-center text-sm">
      <a class="hover:underline" href="/register">Create new account</a>
    </div>
  
  </section>
</div>